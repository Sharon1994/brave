<view class="expert-dt-page">
    <view class="expert-infos ct">
        <view class="infos-head"><image src="{{infos.img}}" /></view>
        <view class="infos-name">{{infos.name}}</view>
        <view class="infos-prop">
            <text wx:for="{{infos.props}}" wx:for-index="idx2" wx:for-item="item" wx:key="key2">{{item.text}}</text>
        </view>
    </view>
    <view class="expert-articles">
        <block wx:for="{{articles}}" wx:for-index="idx" wx:for-item="article" wx:key="key">
            <view class="expert-block">
                <view class="expert-title">{{article.title}}</view>
                <view class="expert-cnt">
                    <navigator url="/pages/article-detail/article-detail?type=expert&id={{article.id}}" hover-class="none">{{article.desc}}</navigator>
                </view>
                <view class="expert-read weui-flex">
                    <view class="weui-flex__item read-way">
                        <view>
                            <image src="../../images/icon-2.png" class="img-1" />
                            <text>{{article.comment}}</text>
                        </view>
                        <view>
                            <image src="../../images/icon-3.png" class="img-2" />
                            <text>{{article.thumb}}</text>
                        </view>
                    </view>
                    <view class="weui-flex__item rt"><text class="pub-time">{{article.time}}</text>分钟前</view>
                </view>
            </view>
        </block>
        <view class="load-more ct">
            <view wx:if="{{hasMore}}" class="has-more">加载更多...</view>
            <view wx:else class="no-more">已加载全部</view>
        </view>
    </view>
</view>
<!-- 全局消息 -->
<message scroll-direction="{{scrollDirection}}"></message>